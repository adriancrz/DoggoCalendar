<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{{title}}}</title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css">
  <link href="https://fonts.googleapis.com/css?family=Acme" rel="stylesheet">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.0/animate.min.css">
  <link rel="stylesheet" href="/styles/styles.css" media="screen" title="no title" charset="utf-8">
  <link rel="shortcut icon" href="/images/dog-paw.png">
</head>

<div class="section">
  <div class="container">
    <div class="content">
      <h1 class="title profile-title">{{ title }}</h1>
    </div>

    <!-- start of owner section -->
    <div class="content">
      <div class="card">
        <div class="card-content">
          <h2 class="subtitle">Your Info</h2>

          <div class="columns">
            <!-- pic column -->
            <div class="column is-narrow center-column">
              <figure class="image is-128x128">
                <img id="profile-image" src="https://bulma.io/images/placeholders/128x128.png">
              </figure>

              <button class="button upload-button" data-upload-target-type="user">Update</button>
            </div>

            <!-- name column -->
            <div class="column">
              <form>
                <div class="field is-horizontal">
                  <div class="field-body">
                    <div class="field">
                      <div class="control" id="nameControl"></div>
                    </div>
                    <div class="field">
                      <div class="control">
                        <button class="button" id="nameBtn">
                          Woof's your name?
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="control">
                  <div class="dropdown">
                    <div class="dropdown-trigger">
                      <button class="button" aria-haspopup="true" aria-controls="dropdown-menu2">
                        <span>Your Events</span>
                        <span class="icon is-small">
                          <i class="fas fa-angle-down" aria-hidden="true"></i>
                        </span>
                      </button>
                    </div>
                    <div class="dropdown-menu" id="dropdown-menu2" role="menu">
                      <div class="dropdown-content" id="userEventsDropdown">
                        {{!-- dropdown goes here --}}
                      </div>
                    </div>
                  </div>
                </div>
              </form>
            </div> {{!-- end of  column--}}
          </div>
        </div>
      </div>
    </div>

    <div class="card profile-doggo-card">
      <div class="card-content">
        <div class="content doggo-title-level">
          <h2 class="subtitle doggo-title-item" id="dogSubtitle">Your Dog(s)</h2>
          <button class="button doggo-title-item" id="adddoggoBtn">Add a dog</button>
        </div>
        <div class="content" id="doggoContent">
        </div>
      </div>
    </div>
  </div>
</div>

<!-- new dog modal -->
<div id="newDoggoModal" class="modal">
  <div class="modal-background" id="DoggoAddModalBackground"></div>
  <div class="modal-content">
    <div class="box">
      <div class="field">
        <label class="label">Doggo's Name</label>
        <div class="control">
          <input class="input" type="text" id="doggome" required/>
        </div>
      </div>
      <div class="field">
        <label class="label">doggo's Gender</label>
        <div class="control">
          <select class="select" id="doggoGender" required>
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="fluid">Fluid</option>

          </select>
        </div>
      </div>
      <div class="field">
        <label class="label">Doggo's Weight (in pounds)</label>
        <input class="input" type="number" id="doggoWeight" required/>
      </div>
      <div class="field">
        <label class="label">Doggo's Bio</label>
        <input
          class="input"
          type="text"
          placeholder="Tell us about your doggo!"
          id="doggoBio"
        />
      </div>
      <div class="field">
        <label class="label">How energetic is your doggo?</label>
        <div class="control">
          <select class="select" id="doggoEnergy" required>
            <option value="1">1 (Not at all)</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6 (Very energetic)</option>
          </select>
        </div>
      </div>
      <div class="field">
        <label class="label"
          >How dominant does your doggo tend to be with other doggos?</label
        >
        <div class="control">
          <select class="select" id="dogDominance" required> 
            <option value="1">1 (Not at all)</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6 (Very dominant)</option>
          </select>
        </div>
      </div>
      <button class="button" id="submitDoggoBtn">Submit</button>
    </div>
  </div>
  <button class="modal-close is-large" aria-label="close"></button>
</div>

<!-- profile image modal -->
<div class="modal" id="profile-image-modal">
  <div class="modal-background" id="profileImageModalBackground"></div>
  <div class="modal-content">
    <div class="modal-card">
      <section class="modal-card-body">
        <form id="picture-upload">
          <div class="field">
            <div class="file has-name is-fullwidth">
              <label class="file-label">
                <input id="pick-file" class="file-input" type="file" name="file" accept="image/*">
                <span class="file-cta">
                  <span class="file-icon"><i class="fas fa-upload"></i></span>
                  <span class="file-label">Choose a fileâ€¦</span>
                </span>
                <span id="pick-file-name" class="file-name"></span>
              </label>
            </div>

            <p id="upload-feedback" class="help is-danger">The file upload failed.</p>
          </div>

          <progress id="upload-progress" class="progress is-primary"></progress>

          <div class="field">
            <div class="control">
              <button id="picture-upload" class="button is-primary">Upload</button>
            </div>
          </div>
        </form>
      </section>
    </div>
  </div>
  <button class="modal-close is-large" aria-label="close"></button>
</div>

<script src="/js/profile.js"></script>

</html>